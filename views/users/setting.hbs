<style>
    @import url("/stylesheets/setting.css");
</style>
<h2 class="welcom-user">welcome {{user.username}}</h2>
<div class="container">
    <div class="row">
        <form>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>username</label>
                    <input class="form-control" name="username" value="{{user.username}}">
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>password</label>
                    <input class="form-control" type="password" name="password" value="{{user.password}}">
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>email</label>
                    <input class="form-control" type="email" name="email" value="{{user.email}}">
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>your Phone number</label>
                    <input class="form-control" type="email" name="userPhone" value="{{user.userPhone}}">
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <input type="submit" id="changeInfo" class="btn btn-primary" value="change information">
                </div>
            </div>
        </form>
    </div>
</div>